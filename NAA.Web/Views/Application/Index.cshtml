@model NAA.Web.Models.ApplicationViewModel

@{
    ViewBag.Title = "GetApplications";
}

<h2>GetApplications</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { applicantId = Model.ApplicantId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Applications[0].Confirmed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Applications[0].Uninverity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Applications[0].CourseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Applications[0].PersonalStatement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Applications[0].TeacherReference)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Applications[0].TeacherContact)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Applications) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Confirmed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Uninverity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonalStatement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeacherReference)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeacherContact)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
