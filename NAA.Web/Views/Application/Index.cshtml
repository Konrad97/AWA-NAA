@model NAA.Web.Models.ApplicationViewModel

@{
    ViewBag.Title = "GetApplications";
}

<h2>GetApplications</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { applicantId = Model.ApplicantId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Applications[0].Confirmed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Applications[0].Uninverity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Applications[0].CourseName)
        </th>
    </tr>

@foreach (var item in Model.Applications) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Confirmed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Uninverity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
